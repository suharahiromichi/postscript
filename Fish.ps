/dash_stroke {
      [0.25] 0 setdash
      stroke
      [] 0 setdash
} def


/r 0.70711 def
/s 1.41421 def


/fishedge {
    newpath
    0.0 0.0 moveto
    0.7 0.7 lineto
    1.4 0.5 lineto
    1.8 0.2 lineto
    2.4 0.2 lineto
    3.0 0.0 lineto
    stroke
    
    true
    {
        newpath
        0.0 0.0 moveto
        3.0 0.0 lineto
        dash_stroke
    } if
} def


/fish {
    gsave
    0.333333 0.333333 scale
    
    fishedge                                % 1
    
    90 rotate
    fishedge                                % 2
    -90 rotate
    
    1.5 1.5 translate
    1 -1 scale
    r r scale
    45 rotate
    fishedge                                % 3
    -45 rotate
%   s s scale
%   1 -1 scale
%   -1.5 -1.5 translate


%   1.5 1.5 translate
%   1 -1 scale
%   r r scale
    -135 rotate
    fishedge                                % 4
    
    3.0 0.0 moveto


    s s scale
    1 -1 scale
    -1.5 -1.5 translate
    
    grestore
} def


/fish_one_step
{
    gsave
    fish                                    % 1


    0.5 0.5 translate
    -1 1 scale
    45 rotate
    r r scale
    fish                                    % 3


    90 rotate
    fish                                    % 2
    grestore
} def


gsave
0.001 setlinewidth
28.34645669 28.34645669 scale               % cm
10.5 14.85 translate                        % (center)
4 4 scale                                   % 倍率
0.001 setlinewidth


fish_one_step


-90 rotate
fish_one_step


-90 rotate
fish_one_step


-90 rotate
fish_one_step


grestore


% end